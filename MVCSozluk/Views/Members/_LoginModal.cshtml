@using Entity.ViewModels
@model LoginViewModel
@{
    Layout = null;
}

@*<form class="form" role="form" method="post" id="login-nav">*@
@using (Html.BeginForm(null,null,FormMethod.Post,new {@class="form",@role="form",@id="login-nav"}))
{
    <div class="form-group">
        @*<label class="sr-only" for="exampleInputEmail2">Email address</label>
            <input type="email" class="form-control" id="exampleInputEmail2" placeholder="Email address" required>*@
        @Html.LabelFor(x=> x.Email, new { @class="sr-only"})
        @Html.TextBoxFor(x=> x.Email, new { @class="form-control", @placeholder= "Enter the User Name", @required = "required" })

    </div>
    <div class="form-group">
        @*<label class="sr-only" for="exampleInputPassword2">Password</label>
            <input type="password" class="form-control" id="exampleInputPassword2" placeholder="Password" required>*@
        @Html.LabelFor(x=> x.Password,new {@class="sr-only" })
        @Html.TextBoxFor(x=> x.Password, new {@class="form-control",@type="password", @placeholder = "Password", @required= "required" })
        <div class="help-block text-right">
            @*<a href="">Forget the password ?</a>*@
            @Html.ActionLink("Forget password","ForgetPassword","Account")
        </div>
    </div>
    <div class="form-group">
        <button type="button" class="btn btn-primary btn-block">Sign in</button>
    </div>
    <div class="checkbox">
        <label>
            @Html.EditorFor(x => x.RememberMe)
            @Html.LabelFor(x => x.RememberMe)
            @*<input type="checkbox"> keep me logged-in*@
        </label>
    </div>
}
@*</form>*@
<script>
    $("#login-nav button").click(function () {
        var gidecekVeri = $("#login-nav").serialize();
        $.ajax({
            url: "/Members/Login",
            method: "POST",
            data: gidecekVeri,
            success: function (result) {
                if (result.success) {
                    window.location = window.location;
                }
                else {
                    alert("Login failed. Please try again.")
                }

            }
        });

    });
</script>
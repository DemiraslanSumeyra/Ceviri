@using Entity.ViewModels
@model HomeViewModel


<section id="contact">
    <div class="section-content">
        <h1 class="section-header"> <span class="content-header wow fadeIn " data-wow-delay="0.2s" data-wow-duration="2s"> Translate</span> your text</h1>
        <h3>Write and click <b>TRANSLATE</b></h3>
    </div>
    <div class="contact-section">
        <div class="container">
            @*<form>*@
            @using (Html.BeginForm())
            //Form yazma kyerine bunu yazıyoruz ve içine diğer parametreleri ekleyebiliriz
            {
                <div class="col-md-6 form-line">
                    <div class="form-group">
                        @*<label for="from"> From</label>*@
                        @Html.Label("Which language?", new { @for = "from" })


                        @*<select name="from">
                            <option value="en">English</option>
                            <option value="tr">Turkish</option>
                            <option value="de">German</option>
                        </select>*@
                        @Html.DropDownListFor(x=> x.FromLang, (IEnumerable<SelectListItem>)ViewBag.Langs) @*Select'i oluştumak için kullandık*@
                    </div>
                    <div class="form-group">

                        @*<textarea class="form-control" id="original" placeholder="Enter Your Text"></textarea>*@
                        @Html.TextAreaFor(x=> x.FromWord,new { @class="form-control",@placeholder="Enter your text"})
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        @*<label for="from"> From</label>*@
                        @Html.Label("Which language?")

                        @*<select name="from">
                            <option value="en">english</option>
                            <option value="cz">czech</option>
                            <option value="sk">slovakia</option>
                        </select>*@
                        @Html.DropDownListFor(x=> x.ToLang, (IEnumerable<SelectListItem>) ViewBag.Langs)
                    </div>
                    <div class="form-group">

                        @*<textarea class="form-control" id="translated" placeholder="Translated text will be here"></textarea>*@
                        @Html.TextAreaFor(x=> x.ToWord, new { @class = "form-control", @placeholder = "Eranslated text will be here" })
                    </div>
                    <div>
                        <button type="submit" class="btn btn-default submit"><i class="fa fa-globe" aria-hidden="true"></i>translate</button>
                    </div>

                </div>
            }
            @*</form>*@
        </div>
    </div>
</section>